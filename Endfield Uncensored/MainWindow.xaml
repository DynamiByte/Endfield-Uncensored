        </Viewbox>

        <!-- UNCENSORED text below logo -->
        <TextBlock 
            Text="UNCENSORED"
            FontFamily="Impact"
            FontSize="36"
            FontWeight="Bold"
            Foreground="Black"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="68.75,116,0,0"
            Panel.ZIndex="1"
            RenderTransformOrigin="0,0.5" Width="192"
            MouseLeftButtonDown="DragWindow">
            <TextBlock.RenderTransform>
                <ScaleTransform ScaleX="0.8405" ScaleY="0.15"/>
            </TextBlock.RenderTransform>
        </TextBlock>

        <!-- UNCENSORED text below logo -->

        <!-- Output TextBox for injector console -->
        <TextBox x:Name="OutputTextBox"
                 FontFamily="Consolas"
                 FontSize="12"
                 Foreground="Black"
                 Background="#10000000"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Width="224"
                 Height="115"
                 Margin="252,0,0,0"
                 Padding="10"
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 BorderBrush="#30000000"
                 BorderThickness="1"
                 Panel.ZIndex="1"/>


        <!-- Close (exit) button -->
        <Label
            x:Name="CloseLabel"
            Content="✕"
            FontWeight="ExtraBold" FontSize="20" Foreground="#333333"
            Height="30" Width="30" Padding="0" Margin="5"
            HorizontalAlignment="Right" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            MouseLeftButtonUp="CloseWindow" MouseRightButtonUp="CloseWindow">
            <Label.RenderTransform>
                <TranslateTransform />
            </Label.RenderTransform>
            <Label.Style>
                <Style TargetType="Label">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="Coral" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="#333333" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <!-- Minimize button -->
        <Label
            Content="—"
            FontWeight="ExtraBold" FontSize="16" Foreground="#333333"
            Height="30" Width="30" Padding="0" Margin="0,3,35,0"
            HorizontalAlignment="Right" VerticalAlignment="Top"
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            MouseLeftButtonUp="MinimizeWindow">
            <Label.Style>
                <Style TargetType="Label">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="Goldenrod" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="#333333" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <!-- Info button -->
        <Label
            Content="ⓘ"
            FontSize="20" Foreground="#333333"
            Height="30" Width="30" Padding="0" Margin="5"
            HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            MouseLeftButtonUp="Info">
            <Label.Style>
                <Style TargetType="Label">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="CornflowerBlue" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="#333333" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <!-- Version Label -->
        <Label
            MouseLeftButtonUp="VersionLabel_Click"
            FontFamily="Bahnschrift"
            Foreground="#333333"
            x:Name="VersionLabel"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="5"
            Panel.ZIndex="2">
            <Label.Style>
                <Style TargetType="Label">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="CornflowerBlue" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="#333333" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>
    </Grid>
</Window>

