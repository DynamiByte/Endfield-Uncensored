<Window x:Class="UnGate11.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:UnGate11"
mc:Ignorable="d"
ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"
Title="Endfield Uncensored" Height="200" Width="500"
WindowStyle="None" AllowsTransparency="True"
Background="White">

    <Window.Clip>
        <RectangleGeometry Rect="0,0,500,200" RadiusX="15" RadiusY="15"/>
    </Window.Clip>

    <Window.Resources>
        <!-- Logo Fade In Animation -->
        <Storyboard x:Key="FadeLogoIn">
            <DoubleAnimation Storyboard.TargetName="LogoCanvas"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Logo Fade Out Animation -->
        <Storyboard x:Key="FadeLogoOut">
            <DoubleAnimation Storyboard.TargetName="LogoCanvas"
                           Storyboard.TargetProperty="Opacity"
                           To="0" Duration="0:0:0.3"/>
        </Storyboard>

        <!-- Window Fade In -->
        <Storyboard x:Key="FadeInWindow">
            <DoubleAnimation From="0" To="1" Duration="0:0:0.3"
                           Storyboard.TargetProperty="Opacity"/>
        </Storyboard>

        <!-- Window Fade Out -->
        <Storyboard x:Key="FadeOutWindow">
            <DoubleAnimation To="0" Duration="0:0:0.2"
                           Storyboard.TargetProperty="Opacity"/>
        </Storyboard>

        <!-- Window Slide Out (for close) -->
        <Storyboard x:Key="SlideOutWindow">
            <DoubleAnimation By="50" Duration="0:0:0.3"
                           Storyboard.TargetProperty="(Window.Top)">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation To="0" Duration="0:0:0.3"
                           Storyboard.TargetProperty="Opacity">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Button Wiggle Animation -->
        <Storyboard x:Key="WiggleButton" FillBehavior="Stop">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.X)"
                                         Duration="0:0:0.4">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="-8">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="8">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-5">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation 
                        From="450" To="400" Duration="0:0:0.5"
                        Storyboard.TargetProperty="(Window.Top)">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation
                        From="0" To="1" Duration="0:0:0.5"
                        Storyboard.TargetProperty="Opacity">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <!-- Transparent drag area -->
        <Grid MouseLeftButtonDown="DragWindow" Background="Transparent"/>

        <!-- Yellow diagonal rectangle behind logo -->
        <Rectangle
            Fill="#fffa00"
            Margin="-103,1,200,5"
            RenderTransformOrigin="0.3,0.5"
            MouseLeftButtonDown="DragWindow">
            <Rectangle.RenderTransform>
                <RotateTransform Angle="-45"/>
            </Rectangle.RenderTransform>
        </Rectangle>

        <!-- Main logo container -->
        <Viewbox x:Name="LogoCanvas"
                 Width="340"
                 Height="80"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Margin="-200,55,0,0"
                 Panel.ZIndex="1"
                 RenderTransformOrigin="0.5,0.5"
                 MouseLeftButtonDown="DragWindow">
            <Viewbox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="LogoScale" ScaleX="1" ScaleY="1"/>
                    <TranslateTransform x:Name="LogoTranslate" X="0" Y="0"/>
                </TransformGroup>
            </Viewbox.RenderTransform>

